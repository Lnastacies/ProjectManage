<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >


<generatorConfiguration>
    <properties resource="generator.properties"/>
    <context id="mybatis" targetRuntime="MyBatis3">
        <!-- 注意这里面的顺序确定的，不能随便更改 -->
        <plugin type="org.mybatis.generator.plugins.EqualsHashCodePlugin"></plugin>
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin"></plugin>
        <plugin type="org.mybatis.generator.plugins.ToStringPlugin"></plugin>
        <!-- 可选的(0 or 1) -->
        <!-- 注释生成器 -->
        <commentGenerator>
        	<property name="suppressDate" value="true"/>
            <!-- 是否去掉注释 -->
            <property name="suppressAllComments" value="false" />
        </commentGenerator>
        
        <!-- 必须的(1 required) -->
        <!-- 数据库连接 -->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
            connectionURL="jdbc:mysql://127.0.0.1:3306/daily_report"
            userId="root" password="root">
        </jdbcConnection>
        
        <!-- 可选的(0 or 1) -->
        <!-- 类型转换器或者类型解析器 -->
        <javaTypeResolver>
            <property name="forceBigDecimals" value="false" />
        </javaTypeResolver>
        
        <!-- 生成Model类存放位置 -->
        <!-- targetProject:自动生成代码的位置 -->
        <javaModelGenerator targetPackage="com.adtec.daily.bean"
            targetProject="build">
            <property name="enableSubPackages" value="true" />
            <property name="trimStrings" value="true" />
        </javaModelGenerator>   
        

        <!-- 生成映射文件存放位置-->
        <sqlMapGenerator targetPackage="mapper.adtec"
            targetProject="build">
            <property name="enableSubPackages" value="true" />
        </sqlMapGenerator>     
        
        <!-- 可选的(0 or 1) -->
        <!-- 生成Dao类存放位置 -->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.adtec.daily.dao" 
            targetProject="build">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>
        
        <!-- tableName:用于自动生成代码的数据库表 -->  
        <!--生成对应表及类名-->
      	<table tableName="t_user" domainObjectName="TUser" enableInsert="true"></table>
    </context>
    
</generatorConfiguration>
